/* 影片信息 */
.movie-item{
  margin:0 20rpx;
  background-color: #fff;
  border-bottom:2rpx solid #e5e5e5;
}
/* 影片图片容器 */
.movie-item .movie-item-avatar{
  width: 128rpx;
  height: 180rpx;
  position: relative;
  margin-top: 24rpx;
  float: left;
}
.movie-item .movie-item-avatar image{
  width: 100%;
  height: 180rpx;
  border-radius: 4rpx;
}
/* 影片内容容器 */
.movie-item .movie-item-content-wrapper{
  padding: 24rpx 28rpx 24rpx 0;
  margin-left: 148rpx;
  height: 180rpx;
  max-height: 180rpx;
  position: relative;
}
.movie-item .movie-item-content-wrapper .content{
  padding-right: 10rpx;
  margin-right: 96rpx;
  overflow: hidden;
}
.movie-item .movie-item-content-wrapper .content .title{
  max-height: 52rpx;
  margin-bottom: 14rpx;
  line-height: 52rpx;
  font-size: 34rpx;
  color: #333;
  overflow: hidden;
}
.movie-item .movie-item-content-wrapper .content .line-ellipsis{
  margin-top: 30rpx;
  line-height: 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 26rpx;
  color: #666;
}
.movie-item .movie-item-content-wrapper .score-wrapper{
  font-size: 24rpx;
  position: absolute;
  right: 0;
  top: 26rpx;
  height: 54rpx;
  margin: auto;
}
.movie-item .movie-item-content-wrapper .score{
  width: 94rpx;
  height: 54rpx;
  line-height: 56rpx;
  text-align: center;
  box-sizing: border-box;
  background-color: #f03d37;
  color: #fff;
  border-radius: 8rpx;
  white-space: nowrap;
  font-size: 12px;
  cursor: pointer;
}